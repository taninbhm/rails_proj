<h1>Restaurants</h1>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="left-container">
        <div class="panel panel-primary">
            <h3 class="panel-heading">Name: <%= @restaurant.name %></h3>
            <div class="panel-body">
                <h4>Address: <%= @restaurant.address %></h4>

                <% @restaurant.foods.each do |food| %>

                    <h5 style="font-weight: bold">Foods: <%= food.dish %></h5>
                <% end %>
                <ul class="pager">
                <li class="previous"> <%= link_to 'back', root_path %></li>
                </ul>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
